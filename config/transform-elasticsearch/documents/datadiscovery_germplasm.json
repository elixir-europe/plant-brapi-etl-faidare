{
  "document-type": "datadiscovery",
  "source-entity": "germplasm",

  "document-transform": {
    "entryType": "Germplasm",
    "@id": "{.germplasmPUI}",
    "identifier": "{.germplasmPUI}",
    "name": "{.germplasmName}",

    "schema:includedInDataCatalog": "{.source}",
    "schema:identifier": "{.germplasmDbId}",
    "schema:name": {
      "{or}": [
        "{.defaultDisplayName}",
        "{.germplasmName}",
        "{.accessionNumber}"
      ]
    },
    "schema:url": "{.documentationURL}",
    "url": "{.documentationURL}",
    "schema:description": {
      "{join}": [
        "\"",
        { "{or}": ["{.germplasmName}", "{.defaultDisplayName}"] },
        "\" is a",
        " {.genus + .species + .subtaxa}",
        " ({.commonCropName})",
        " accession",
        " (number: \"{.accessionNumber}\")",
        " managed by {.holdingInstitute.instituteName}",
        ".",
        " {.comment}"
      ]
    },
    "description": {
      "{join}": [
        { "{or}": ["{.germplasmName}", "{.defaultDisplayName}"] },
        " is a",
        " {.genus + .species + .subtaxa}",
        " ({.commonCropName})",
        " accession",
        " (number: {.accessionNumber})",
        " managed by {.holdingInstitute.instituteName}",
        ".",
        " {.comment}"
      ]
    },
    "species": {
      "{join}": ["{.genus + .species}"]
    },
    "germplasm": {
      "cropName": {
        "{list}": [
          "{.commonCropName}",
          "{.taxonCommonNames}",
          "{.genus}",
          "{.genus + .species}",
          "{.genus + .species + .subtaxa}",
          "{.taxonSynonyms}"
        ], "{transform}": ["capitalize", "flatten", "distinct"]
      },
      "germplasmList": {
        "{flatten_distinct}": [
          "{.panel.name}",
          "{.collection.name}",
          "{.population.name}",
          "{.holdingGenbank.instituteName}"
        ]
      },
      "accession": {
        "{flatten_distinct}": [
          "{.germplasmName}",
          "{.defaultDisplayName}",
          "{.accessionNumber}",
          "{.synonyms}"
        ]
      }
    },
    "node": "{.source}",
    "databaseName": {
      "{join}": [
        "brapi@",
        "{.source}"
      ]
    },
    "holdingInstitute": {
      "{join}": [
        { "{or}": ["{.holdingInstitute.organisation}", "{.instituteName}"] }
     ]
    },
    "biologicalStatus": "{.biologicalStatusOfAccessionCode}",
    "geneticNature": "{.geneticNature}",
    "countryOfOrigin": "{.countryOfOriginCode}",
    "taxonGroup": {
      "{flatten_distinct}": ["{.genus}"]
    },
    "groupId": "{.groupId}"
  }
}
